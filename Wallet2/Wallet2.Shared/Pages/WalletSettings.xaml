<Page
    x:Class="Wallet2.Shared.Pages.WalletSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wallet2.Shared.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <CheckBox Grid.Row="1" Name="chkDev" Style="{StaticResource MaterialCheckBoxStyle}"
                  Padding="0,30,0,30" Checked="DevChecked" Unchecked="DevUnChecked"
             Content="Developer's Mode" />
        </StackPanel>
    </Grid>
</Page>
